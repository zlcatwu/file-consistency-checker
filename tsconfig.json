{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019", "ES2020.Promise", "ES2020.BigInt", "ES2020.String"],
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "./src",
    "removeComments": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@commands/*": ["commands/*"]
    }
  },
  "exclude": ["lib", "__tests__"]
}